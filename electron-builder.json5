// @see - https://www.electron.build/configuration/configuration
{
  "$schema": "https://raw.githubusercontent.com/electron-userland/electron-builder/master/packages/app-builder-lib/scheme.json",
  
  // Application Identity
  "appId": "com.dev.janitor",
  "productName": "Dev Janitor",
  
  // Application Metadata
  "copyright": "Copyright Â© 2024 Dev Janitor",
  "buildVersion": "1.0.0",
  
  // Build Configuration
  "asar": true,
  "compression": "maximum",
  "removePackageScripts": true,
  
  // Directories
  "directories": {
    "output": "release/${version}",
    "buildResources": "build"
  },
  
  // Files to include
  "files": [
    "dist",
    "dist-electron",
    "!**/*.map",
    "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
    "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
    "!**/node_modules/*.d.ts",
    "!**/node_modules/.bin"
  ],
  
  // Extra resources (copied to app resources folder)
  "extraResources": [
    {
      "from": "build/icon.svg",
      "to": "icon.svg"
    }
  ],
  
  // macOS Configuration
  "mac": {
    "target": [
      {
        "target": "dmg",
        "arch": ["x64", "arm64"]
      },
      {
        "target": "zip",
        "arch": ["x64", "arm64"]
      }
    ],
    "artifactName": "${productName}-Mac-${version}-${arch}.${ext}",
    "category": "public.app-category.developer-tools",
    "darkModeSupport": true,
    "hardenedRuntime": true,
    "gatekeeperAssess": false,
    "entitlements": "build/entitlements.mac.plist",
    "entitlementsInherit": "build/entitlements.mac.plist",
    "minimumSystemVersion": "10.13"
  },
  
  // DMG Configuration
  "dmg": {
    "contents": [
      {
        "x": 130,
        "y": 220
      },
      {
        "x": 410,
        "y": 220,
        "type": "link",
        "path": "/Applications"
      }
    ],
    "window": {
      "width": 540,
      "height": 380
    }
  },
  
  // Windows Configuration
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      },
      {
        "target": "portable",
        "arch": ["x64"]
      }
    ],
    "artifactName": "${productName}-Windows-${version}-${arch}-Setup.${ext}",
    "publisherName": "Dev Janitor",
    "legalTrademarks": "Dev Janitor",
    "signAndEditExecutable": false
  },
  
  // NSIS Installer Configuration (Windows)
  "nsis": {
    "oneClick": false,
    "perMachine": false,
    "allowToChangeInstallationDirectory": true,
    "deleteAppDataOnUninstall": false,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "Dev Janitor",
    "license": "LICENSE",
    "installerLanguages": ["en_US", "zh_CN"],
    "language": "1033"
  },
  
  // Portable Configuration (Windows)
  "portable": {
    "artifactName": "${productName}-Windows-${version}-Portable.${ext}"
  },
  
  // Linux Configuration
  "linux": {
    "target": [
      {
        "target": "AppImage",
        "arch": ["x64"]
      },
      {
        "target": "deb",
        "arch": ["x64"]
      },
      {
        "target": "rpm",
        "arch": ["x64"]
      }
    ],
    "artifactName": "${productName}-Linux-${version}-${arch}.${ext}",
    "category": "Development",
    "synopsis": "Dev Janitor - Development Tools Manager",
    "description": "A cross-platform desktop application for managing development tools and dependencies",
    "desktop": {
      "Name": "Dev Janitor",
      "Comment": "Clean up and manage your development tools and dependencies",
      "Categories": "Development;IDE;",
      "Keywords": "development;tools;nodejs;python;npm;pip;",
      "StartupNotify": "true"
    },
    "maintainer": "Dev Janitor Team"
  },
  
  // AppImage Configuration
  "appImage": {
    "artifactName": "${productName}-Linux-${version}-${arch}.${ext}",
    "category": "Development"
  },
  
  // Debian Package Configuration
  "deb": {
    "depends": [
      "libgtk-3-0",
      "libnotify4",
      "libnss3",
      "libxss1",
      "libxtst6",
      "xdg-utils",
      "libatspi2.0-0",
      "libuuid1"
    ],
    "priority": "optional",
    "compression": "xz"
  },
  
  // RPM Package Configuration
  "rpm": {
    "depends": [
      "gtk3",
      "libnotify",
      "nss",
      "libXScrnSaver",
      "libXtst",
      "xdg-utils",
      "at-spi2-core",
      "libuuid"
    ],
    "compression": "xz"
  },
  
  // Auto-Update Configuration (electron-updater)
  "publish": [
    {
      "provider": "github",
      "owner": "cocojojo5213",
      "repo": "Dev-Janitor",
      "releaseType": "release"
    }
  ],
  
  // Generate latest.yml for auto-updates
  "generateUpdatesFilesForAllChannels": true,
  
  // Artifact build options
  "artifactBuildStarted": null,
  "artifactBuildCompleted": null,
  
  // Build hooks (optional)
  "afterSign": null,
  "afterPack": null,
  "afterAllArtifactBuild": null
}
